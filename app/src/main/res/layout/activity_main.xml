<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#E8E8E8"
    android:orientation="vertical"
    tools:context="com.example.felipe_note.eduquadri.MainActivity">

    <Button
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:text="@string/criar_quadrinho"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/screen_border_2"
        android:layout_marginTop="70dp"
        android:drawableLeft="@drawable/chat2"
        android:textStyle="italic"
        android:id="@+id/btnCreate"/>

    <Button
        android:layout_width="264dp"
        android:layout_height="wrap_content"
        android:text="@string/visualizar_quadrinho"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/screen_border"
        android:layout_marginTop="40dp"
        android:drawableLeft="@drawable/ver"
        android:textStyle="italic"
        android:id="@+id/btnVisualize"
        android:onClick="escolhaLayoutQuadrinho"/>

    <Button
        android:layout_width="266dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnSobre"
        android:text="@string/sobre"
        android:layout_gravity="center"
        android:gravity="center"
        android:drawableLeft="@drawable/about"
        android:background="@drawable/screen_border_4"
        android:layout_marginTop="40dp"
        android:textStyle="italic"/>



</LinearLayout>
